<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @snowball.name %>
</p>

<table class="pure-table pure-table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Interest Rate</th>
      <th>Initial Balance</th>
      <th>Current Balance</th>
      <th>Difference</th>
    </tr>
  </thead>

  <tbody>
    <% @snowball.accounts.each do |account| %>
      <tr>
        <td><%= link_to account.name, account %></td>
        <td><%= percentage account.interest_rate %></td>
        <td class="money"><%= money account.initial_balance %></td>
        <td class="money"><%= money account.current_balance %></td>
        <td class="money"><%= money account.current_difference %></td>
      </tr>
    <% end %>
    <tr>
      <td>Total</td>
      <td></td>
      <td class="money"><%= money @total_initial %></td>
      <td class="money"><%= money @total_current %></td>
      <td class="money"><%= money @total_difference %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %> |
<%= link_to 'Edit', edit_snowball_path(@snowball) %> |
<%= link_to 'Delete', @snowball, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', snowballs_path %>
