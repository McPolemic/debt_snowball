<p id="notice"><%= notice %></p>

<h1>Snowballs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snowballs.each do |snowball| %>
      <tr>
        <td><%= snowball.name %></td>
        <td><%= link_to 'Show', snowball %></td>
        <td><%= link_to 'Edit', edit_snowball_path(snowball) %></td>
        <td><%= link_to 'Destroy', snowball, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Snowball', new_snowball_path %>
